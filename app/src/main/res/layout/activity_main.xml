<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Form" />

    <EditText
        android:id="@+id/editnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="6dp"
        android:hint="Nama" />

    <EditText
        android:id="@+id/edittahun"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editnama"
        android:layout_alignEnd="@+id/editnama"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="3dp"
        android:hint="Tahun Lahir" />

    <EditText
        android:id="@+id/editalamat"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittahun"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="11dp"
        android:hint="Alamat" />

    <Button
        android:id="@+id/btnok"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_below="@+id/editalamat"
        android:layout_alignBottom="@+id/txthasil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="174dp"
        android:text=" Ok" />

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="196dp"
        android:layout_height="89dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-79dp"
        android:layout_marginBottom="86dp"
        android:text="Hasil" />
</RelativeLayout>